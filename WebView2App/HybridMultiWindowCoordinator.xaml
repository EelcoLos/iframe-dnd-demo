<Window x:Class="WebView2App.HybridMultiWindowCoordinator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hybrid Multi-Window Coordinator"
        Width="600"
        Height="200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    <Grid>
        <StackPanel VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <TextBlock Text="ðŸ”— Hybrid Multi-Window Coordinator"
                       FontSize="24"
                    FontWeight="Bold"
                       Foreground="#333333"
                    TextAlignment="Center"
                    Margin="0,0,0,20"/>

            <TextBlock Text="Opening WebView2 source window and WinForms target window..."
                       FontSize="14"
                    Foreground="#666666"
                    TextAlignment="Center"
                    Margin="0,0,0,15"/>

            <ProgressBar Height="4"
                    IsIndeterminate="True"
                    Foreground="#10B981"
                    Margin="0,0,0,15"/>

            <TextBlock x:Name="StatusText"
                       FontSize="12"
                    Foreground="#999999"
                       TextAlignment="Center"
                    TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
