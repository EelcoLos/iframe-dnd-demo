<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <AssemblyName>DragDropWebView2Demo</AssemblyName>
    <Product>Drag &amp; Drop WebView2 Demo</Product>
    <Version>1.0.0</Version>
    <Authors>EelcoLos</Authors>
    <Company>EelcoLos</Company>
    <Description>WebView2 application demonstrating drag and drop between multiple web views</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Web.WebView2" Version="1.0.2792.45" />
  </ItemGroup>

  <ItemGroup>
    <!-- Copy all public HTML/JS files to output -->
    <None Update="../public/**/*.*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Link>public/%(RecursiveDir)%(Filename)%(Extension)</Link>
    </None>
  </ItemGroup>

</Project>
